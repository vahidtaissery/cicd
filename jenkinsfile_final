pipeline {
    agent { label 'javacicd' }

    tools {
        maven 'mvn'
    }

    stages {
        stage('checkout') {
            steps {
                echo 'Cloning GitHub Repo'
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/vahidtaissery/cicd.git']])
            }
        }

        stage('sonar') {
            steps {
                echo 'Scanning project'
                sh 'ls -ltr'
                sh '''mvn sonar:sonar \\
                      -Dsonar.host.url=http://44.211.206.165:9000 \\
                      -Dsonar.login=squ_4fc9113464bcb92f63c585e45b6c6b38df263427'''
            }
        }

        stage('Build Artifact') {
            steps {
                echo 'Building Artifact'
                sh 'mvn clean package'
            }
        }

        stage('Docker Image') {
            steps {
                echo 'Building Docker Image'
                sh 'docker build -t taisserysuhaib/cicd:${BUILD_NUMBER} .'
            }
        }

        stage('Push to Dockerhub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                        sh "docker login -u taisserysuhaib -p ${dockerhub}"
                        sh "docker push taisserysuhaib/cicd:${BUILD_NUMBER}"
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                echo 'Updating Deployment File'
                withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) {
                    sh '''
                        git config user.email "vahid@gmail.com"
                        git config user.name "vahid"
                        BUILD_NUMBER=${BUILD_NUMBER}
                        sed -i "s/cicd:.*/cicd:${BUILD_NUMBER}/g" deploymentfiles/deployment.yml
                        git add .
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                        git push origin main
                    '''
                }
            }
        }
    }
}
